
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectMVCAuth.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>
    <div class="containe0r mt-5">
        <h1 class="text-center mb-4">Iniciar Sesión</h1>
    </div>
    <div class="container d-flex justify-content-center mt-2" style="height: 100vh;">
        <div class="w-50">
            <form asp-action="IniciarSesion" method="post">
                <div class="row mb-3">
                    <label for="email" class="col-form-label">Correo:</label>
                    <div class="col-sm-12">
                        <input id="email" class="form-control" type="email" placeholder="example@gmail.com" name="correo" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="password" class="col-form-label">Contraseña:</label>
                    <div class="col-sm-12">
                        <input id="password" class="form-control" type="password" placeholder="ingresar contraseña" name="clave"/>
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Iniciar Sesion</button>
            </form>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
